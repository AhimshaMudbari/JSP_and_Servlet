	int result = a+b;
	
//	req.setAttribute("add", result);
	//Request dispatcher
//	RequestDispatcher dispatch= req.getRequestDispatcher("/square");
//	dispatch.forward(req, res);
	
	//send Redirect
	res.sendRedirect("square");
